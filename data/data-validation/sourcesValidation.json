{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Source Validation",
    "description": "Schema for Source data",
    "type": "object",
    "properties": {
        "periodId": {
            "type": "integer",
            "description": "The ID of the period this source belongs to"
        },
         "author": {
            "type": "string",
            "description": "The author(s) of the source",
            "nullable": true
        },
         "date": {
            "type": "string",
            "description": "The publication date of the source",
            "format": "date",
            "nullable": true
        },
        "title": {
           "type": "string",
            "description": "The title of the source"
        },
        "publisher": {
            "type": "string",
            "description": "The publisher of the source",
            "nullable": true
        },
        "URL": {
            "type": "string",
            "description": "The URL of the source",
            "format": "URL"
        }
    },
    "required": ["periodId", "title", "URL"]
}